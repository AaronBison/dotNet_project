@page "/entries"

<h1>Entries</h1>

@using DataLibrary
@using DataLibrary.Models

@inject IEntriesData _db

@if (entries == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Pass Id</th>
                <th>BarCode</th>
                <th>HallId</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in entries)
            {
                <tr>
                    <td>@entry.Name</td>
                    <td>@entry.Date</td>
                    <td>@entry.PassId</td>
                    <td>@entry.BarCode</td>
                    <td>@entry.HallId</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<EntryModel> entries;

    protected override async Task OnInitializedAsync()
    {
        entries = await _db.GetEntries();
    }


}
